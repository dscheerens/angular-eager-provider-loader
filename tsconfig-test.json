{
    "compilerOptions": {
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "newLine": "LF",
        "module": "es2015",
        "target": "es5",
        "outDir": "tmp/test",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSourceMap": false,
        "removeComments": true,
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}
